<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTCC2.VacinaListPage"
             Title="Vacinas do Pet"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Start">

            <!-- CABEÃ‡ALHO -->
            <Frame BackgroundColor="#512BD4" 
                   Padding="20,15"
                   CornerRadius="15"
                   HorizontalOptions="Fill"
                   HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="lblTitulo" 
                           Text="ðŸ’‰ Vacinas" 
                           FontSize="24" 
                           HorizontalOptions="Center" 
                           FontAttributes="Bold"
                           TextColor="White"/>

                    <Label x:Name="lblPetNome" 
                           Text="Carregando..." 
                           FontSize="16" 
                           HorizontalOptions="Center"
                           TextColor="#E0E0E0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- BOTÃƒO ADICIONAR VACINA -->
            <Button Text="âž• Adicionar Vacina" 
                    x:Name="btnAddVacina"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill"/>

            <!-- CONTADOR -->
            <Label x:Name="lblContador"
                   Text="Total: 0 vacina(s)"
                   FontSize="14"
                   TextColor="#666"
                   HorizontalOptions="Center"/>

            <!-- LISTA DE VACINAS -->
            <Frame BackgroundColor="White" 
                   Padding="0"
                   CornerRadius="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="0">
                    <!-- CABEÃ‡ALHO DA LISTA -->
                    <Frame BackgroundColor="#F5F5F5" 
                           Padding="15,12"
                           CornerRadius="15">
                        <Label Text="Vacinas Aplicadas" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#333"/>
                    </Frame>

                    <!-- LISTA DE VACINAS -->
                    <CollectionView x:Name="vacinasCollection">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center"
                                               Padding="40"
                                               Spacing="15">
                                <Label Text="ðŸ’‰" 
                                       FontSize="40" 
                                       HorizontalOptions="Center"/>
                                <Label Text="Nenhuma vacina cadastrada" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#666"/>
                                <Label Text="Toque no botÃ£o acima para adicionar a primeira vacina!" 
                                       FontSize="14" 
                                       HorizontalOptions="Center"
                                       TextColor="#999"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15" 
                                       Margin="10,5,10,5" 
                                       BackgroundColor="#FFFFFF"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="12"
                                       HasShadow="True">

                                    <VerticalStackLayout Spacing="8">
                                        <!-- NOME DA VACINA -->
                                        <Label Text="{Binding Nome}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#333"/>

                                        <!-- DATAS -->
                                        <HorizontalStackLayout Spacing="15">
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="Aplicada:" 
                                                       FontSize="12" 
                                                       TextColor="#666"/>
                                                <Label Text="{Binding DataAplicacao, StringFormat='{0:dd/MM/yyyy}'}" 
                                                       FontSize="12" 
                                                       TextColor="#333"
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="Vence:" 
                                                       FontSize="12" 
                                                       TextColor="#666"/>
                                                <Label Text="{Binding DataValidade, StringFormat='{0:dd/MM/yyyy}'}" 
                                                       FontSize="12" 
                                                       TextColor="{Binding EstaVencida, Converter={x:StaticResource CorStatusVacinaConverter}}"
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>

                                        <!-- INFORMAÃ‡Ã•ES ADICIONAIS -->
                                        <HorizontalStackLayout Spacing="10">
                                            <!-- DOSE COM BACKGROUND -->
                                            <Frame BackgroundColor="#F0F0F0"
                                                   Padding="6,2"
                                                   CornerRadius="4"
                                                   HasShadow="False">
                                                <Label Text="{Binding Dose}" 
                                                       FontSize="11" 
                                                       TextColor="#888"/>
                                            </Frame>

                                            <Label Text="{Binding Fabricante}" 
                                                   FontSize="11" 
                                                   TextColor="#888"/>
                                        </HorizontalStackLayout>

                                        <!-- VETERINÃRIO E CLÃNICA -->
                                        <HorizontalStackLayout Spacing="10">
                                            <Label Text="{Binding VeterinarioResponsavel}" 
                                                   FontSize="11" 
                                                   TextColor="#888"/>
                                            <Label Text="â€¢" 
                                                   FontSize="11" 
                                                   TextColor="#888"/>
                                            <Label Text="{Binding Clinica}" 
                                                   FontSize="11" 
                                                   TextColor="#888"/>
                                        </HorizontalStackLayout>

                                        <!-- STATUS -->
                                        <Label Text="{Binding EstaVencida, Converter={x:StaticResource TextoStatusVacinaConverter}}" 
                                               FontSize="11" 
                                               FontAttributes="Bold"
                                               TextColor="{Binding EstaVencida, Converter={x:StaticResource CorStatusVacinaConverter}}"
                                               HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>