<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTCC2.CriarContaPage"
             Title="Criar Conta"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30" VerticalOptions="Start">

            <!-- LOGO -->
            <Frame BackgroundColor="#4CAF50" 
                   Padding="40,25"
                   CornerRadius="25"
                   HorizontalOptions="Center"
                   HasShadow="True"
                   Margin="0,0,0,20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="ðŸ¾" 
                           FontSize="45" 
                           HorizontalOptions="Center"/>
                    <Label Text="Nova Conta" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- FORMULÃRIO DE CADASTRO -->
            <Frame BackgroundColor="White" 
                   Padding="30,25"
                   CornerRadius="20"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="20">
                    <Label Text="Crie sua conta gratuita" 
                           FontSize="22" 
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"/>

                    <!-- NOME -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ‘¤ Nome completo" 
           FontSize="16" 
           FontAttributes="Bold"
           TextColor="#4CAF50"/>
                        <Frame BackgroundColor="#F8F9FA" 
           Padding="15,0"
           CornerRadius="12"
           BorderColor="#E0E0E0"
           HasShadow="False">
                            <Entry x:Name="entryNome" 
               Placeholder="Seu nome completo"
               FontSize="16"
               TextColor="#333"
               BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- EMAIL -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ“§ Email" 
           FontSize="16" 
           FontAttributes="Bold"
           TextColor="#4CAF50"/>
                        <Frame BackgroundColor="#F8F9FA" 
           Padding="15,0"
           CornerRadius="12"
           BorderColor="#E0E0E0"
           HasShadow="False">
                            <Entry x:Name="entryEmail" 
               Placeholder="seu@email.com"
               Keyboard="Email"
               FontSize="16"
               TextColor="#333"
               BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- SENHA -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="ðŸ”’ Senha" 
           FontSize="16" 
           FontAttributes="Bold"
           TextColor="#4CAF50"/>
                        <Frame BackgroundColor="#F8F9FA" 
           Padding="15,0"
           CornerRadius="12"
           BorderColor="#E0E0E0"
           HasShadow="False">
                            <Entry x:Name="entrySenha" 
               Placeholder="MÃ­nimo 6 caracteres"
               IsPassword="True"
               FontSize="16"
               TextColor="#333"
               BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- CONFIRMAR SENHA -->
                    <VerticalStackLayout Spacing="8">
                        <Label Text="âœ… Confirmar senha" 
           FontSize="16" 
           FontAttributes="Bold"
           TextColor="#4CAF50"/>
                        <Frame BackgroundColor="#F8F9FA" 
           Padding="15,0"
           CornerRadius="12"
           BorderColor="#E0E0E0"
           HasShadow="False">
                            <Entry x:Name="entryConfirmarSenha" 
               Placeholder="Digite novamente a senha"
               IsPassword="True"
               FontSize="16"
               TextColor="#333"
               BackgroundColor="Transparent"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- BOTÃ•ES -->
                    <Button Text="ðŸ“ Criar minha conta" 
                            Clicked="OnCriarContaClicked"
                            BackgroundColor="#4CAF50"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HeightRequest="55"
                            CornerRadius="12"
                            HorizontalOptions="Fill"
                            Margin="0,10,0,0"/>

                    <Button Text="â†©ï¸ Voltar para login" 
                            Clicked="OnVoltarClicked"
                            BackgroundColor="Transparent"
                            TextColor="#666"
                            BorderColor="#666"
                            BorderWidth="1"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="10"
                            HorizontalOptions="Fill"/>

                </VerticalStackLayout>
            </Frame>

            <!-- RODAPÃ‰ -->
            <Label Text="Todos os seus dados ficam protegidos e seguros" 
                   FontSize="14" 
                   TextColor="#666"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>