<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTCC2.LoginPage"
             Title="Login"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">

            <!-- LOGO -->
            <Frame BackgroundColor="#512BD4" 
                   Padding="30,20"
                   CornerRadius="20"
                   HorizontalOptions="Center"
                   HasShadow="True">
                <Label Text="ðŸ¾ PetVaccine" 
                       FontSize="32" 
                       FontAttributes="Bold"
                       TextColor="White"/>
            </Frame>

            <!-- FORMULÃRIO DE LOGIN -->
            <Frame BackgroundColor="White" 
                   Padding="25"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="20">
                    <Label Text="FaÃ§a seu login" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="#333"
                           HorizontalOptions="Center"/>

                    <!-- EMAIL -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#666"/>
                        <Entry x:Name="entryEmail" 
                               Placeholder="seu@email.com"
                               Keyboard="Email"/>
                    </VerticalStackLayout>

                    <!-- SENHA -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Senha" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#666"/>
                        <Entry x:Name="entrySenha" 
                               Placeholder="Sua senha"
                               IsPassword="True"/>
                    </VerticalStackLayout>

                    <!-- BOTÃ•ES -->
                    <Button Text="ðŸ” Entrar" 
                            Clicked="OnLoginClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            CornerRadius="10"
                            HorizontalOptions="Fill"/>

                    <Button Text="ðŸ“ Criar conta" 
                            Clicked="OnCriarContaClicked"
                            BackgroundColor="Transparent"
                            TextColor="#512BD4"
                            BorderColor="#512BD4"
                            BorderWidth="2"
                            FontSize="14"
                            HeightRequest="45"
                            CornerRadius="10"
                            HorizontalOptions="Fill"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>