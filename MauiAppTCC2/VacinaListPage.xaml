<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTCC2.VacinaListPage"
             Title="Vacinas do Pet"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20" VerticalOptions="Start">

            <!-- CABEÃ‡ALHO -->
            <Frame BackgroundColor="#512BD4" 
       Padding="20,15"
       CornerRadius="15"
       HorizontalOptions="Fill"
       HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="lblTitulo" 
               Text="Vacinas" 
               FontSize="24" 
               HorizontalOptions="Center" 
               FontAttributes="Bold"
               TextColor="White"/>

                    <Label Text="Sistema de controle de vacinas para pet" 
               FontSize="16" 
               HorizontalOptions="Center"
               TextColor="#E0E0E0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- BOTÃƒO ADICIONAR VACINA -->
            <Button Text="âž• Adicionar Vacina" 
                    x:Name="btnAddVacina"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="12"
                    HorizontalOptions="Fill"/>

            <!-- CONTADOR E STATUS -->
            <Frame BackgroundColor="White" 
                   Padding="15"
                   CornerRadius="12"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Frame BackgroundColor="#E3F2FD" Padding="12,8" CornerRadius="8">
                        <Label x:Name="lblContador" 
                               Text="0" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#1976D2"
                               HorizontalOptions="Center"/>
                    </Frame>
                    <VerticalStackLayout VerticalOptions="Center">
                        <Label Text="Vacinas Cadastradas" 
                               FontSize="14" 
                               TextColor="#666"/>
                        <Label Text="Total" 
                               FontSize="12" 
                               TextColor="#999"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </Frame>

            <!-- LISTA DE VACINAS -->
            <Frame BackgroundColor="White" 
                   Padding="0"
                   CornerRadius="15"
                   HasShadow="True"
                   BorderColor="#E0E0E0">
                <VerticalStackLayout Spacing="0">
                    <!-- CABEÃ‡ALHO DA LISTA -->
                    <Frame BackgroundColor="#F5F5F5" 
                           Padding="15,12"
                           CornerRadius="15">
                        <Label Text="Vacinas Aplicadas" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               TextColor="#333"/>
                    </Frame>

                    <CollectionView x:Name="vacinasCollection">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" 
                                               VerticalOptions="Center"
                                               Padding="40"
                                               Spacing="15">
                                <Label Text="ðŸ’‰" 
                                       FontSize="40" 
                                       HorizontalOptions="Center"/>
                                <Label Text="Nenhuma vacina cadastrada" 
                                       FontSize="16" 
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#666"/>
                                <Label Text="Toque no botÃ£o acima para adicionar a primeira vacina!" 
                                       FontSize="14" 
                                       HorizontalOptions="Center"
                                       TextColor="#999"
                                       HorizontalTextAlignment="Center"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="15" 
                                       Margin="10,5,10,5" 
                                       BackgroundColor="#FFFFFF"
                                       BorderColor="#E0E0E0"
                                       CornerRadius="12"
                                       HasShadow="True">

                                    <Grid ColumnDefinitions="*,Auto" 
                                          RowDefinitions="Auto,Auto,Auto,Auto"
                                          RowSpacing="6"
                                          ColumnSpacing="10">

                                        <!-- NOME DA VACINA -->
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding Nome}" 
                                               FontSize="16" 
                                               FontAttributes="Bold"
                                               TextColor="#333"/>

                                        <!-- STATUS -->
                                        <Frame Grid.Row="0" Grid.Column="1"
                                               BackgroundColor="{Binding StatusColor}"
                                               Padding="8,4"
                                               CornerRadius="8"
                                               HasShadow="False">
                                            <Label Text="{Binding StatusTexto}" 
                                                   FontSize="11" 
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   HorizontalOptions="Center"/>
                                        </Frame>

                                        <!-- DATAS -->
                                        <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                             Spacing="20">
                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="ðŸ“… Aplicada:" 
                                                       FontSize="12" 
                                                       TextColor="#666"/>
                                                <Label Text="{Binding DataAplicacao, StringFormat='{0:dd/MM/yyyy}'}" 
                                                       FontSize="12" 
                                                       TextColor="#333"
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>

                                            <VerticalStackLayout Spacing="2">
                                                <Label Text="â° Vence:" 
                                                       FontSize="12" 
                                                       TextColor="#666"/>
                                                <Label Text="{Binding DataValidade, StringFormat='{0:dd/MM/yyyy}'}" 
                                                       FontSize="12" 
                                                       TextColor="{Binding StatusColor}"
                                                       FontAttributes="Bold"/>
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>

                                        <!-- INFORMAÃ‡Ã•ES -->
                                        <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                             Spacing="15">
                                            <Frame BackgroundColor="#F0F0F0"
                                                   Padding="6,3"
                                                   CornerRadius="4"
                                                   HasShadow="False">
                                                <Label Text="{Binding Dose}" 
                                                       FontSize="11" 
                                                       TextColor="#666"
                                                       FontAttributes="Bold"/>
                                            </Frame>

                                            <Label Text="{Binding Fabricante}" 
                                                   FontSize="11" 
                                                   TextColor="#888"/>
                                        </HorizontalStackLayout>

                                        <!-- VETERINÃRIO -->
                                        <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                             Spacing="8">
                                            <Label Text="ðŸ‘¨â€âš•ï¸" 
                                                   FontSize="11" 
                                                   TextColor="#666"/>
                                            <Label Text="{Binding VeterinarioResponsavel}" 
                                                   FontSize="11" 
                                                   TextColor="#666"/>
                                            <Label Text="â€¢" 
                                                   FontSize="11" 
                                                   TextColor="#666"/>
                                            <Label Text="{Binding Clinica}" 
                                                   FontSize="11" 
                                                   TextColor="#666"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>