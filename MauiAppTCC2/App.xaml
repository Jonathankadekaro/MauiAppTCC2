<?xml version = "1.0" encoding = "UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiAppTCC2.Models"
             x:Class="Vacina.Views.Pet"
             Title="Meus Pets">

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- 🔄 Refresh View -->
        <RefreshView Grid.Row="1" 
                    Command="{Binding RefreshCommand}"
                    IsRefreshing="{Binding IsBusy}">

            <CollectionView ItemsSource="{Binding Pets}"
                          SelectionMode="Single"
                          SelectedItem="{Binding SelectedPet}">

                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" 
                                       VerticalOptions="Center"
                                       Padding="40">
                        <Label Text="🐾" FontSize="40" 
                               HorizontalOptions="Center"/>
                        <Label Text="Nenhum pet cadastrado" 
                               FontSize="16" 
                               HorizontalOptions="Center"/>
                        <Label Text="Toque no + para adicionar seu primeiro pet!" 
                               FontSize="14" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Pet">
                        <Grid Padding="15,10" 
                              ColumnDefinitions="Auto,*,Auto"
                              RowDefinitions="Auto,Auto">

                            <!-- Foto do Pet -->
                            <Frame Grid.RowSpan="2" 
                                   Grid.Column="0"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   Padding="0"
                                   CornerRadius="35"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center">
                                <Image Source="{Binding FotoPath, 
                                       FallbackValue='pet_placeholder.png'}"
                                       Aspect="AspectFill"/>
                            </Frame>

                            <!-- Informações -->
                            <VerticalStackLayout Grid.Column="1" 
                                               Grid.Row="0"
                                               Padding="15,0,0,0"
                                               VerticalOptions="Center">
                                <Label Text="{Binding Nome}" 
                                       FontSize="18" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding Especie}" 
                                       FontSize="14"
                                       TextColor="#666"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" 
                                               Grid.Row="1"
                                               Padding="15,0,0,0">
                                <Label Text="{Binding Raca}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                                <Label Text="{Binding Idade, 
                                       StringFormat='{0} anos'}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                            </VerticalStackLayout>

                            <!-- Botão Vacinas -->
                            <Button Grid.Column="2"
                                  Grid.RowSpan="2"
                                  Text="💉"
                                  FontSize="16"
                                  BackgroundColor="#4CAF50"
                                  TextColor="White"
                                  WidthRequest="50"
                                  HeightRequest="50"
                                  CornerRadius="25"
                                  Command="{Binding Source={RelativeSource 
                                          AncestorType={x:Type viewmodels:PetViewModel}}, 
                                          Path=ShowVacinasCommand}"
                                  CommandParameter="{Binding Id}"/>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- ➕ Botão Adicionar -->
        <Button Grid.Row="2"
                Text="+ Adicionar Pet"
                Command="{Binding AddPetCommand}"
                BackgroundColor="#2196F3"
                TextColor="White"
                Margin="20"
                HeightRequest="50"
                CornerRadius="25"/>

    </Grid>
</ContentPage>